<div class="container">
  <div class='ripple-background'>
    <div class='circle xxlarge shade1'></div>
    <div class='circle xlarge shade2'></div>
    <div class='circle large shade3'></div>
    <div class='circle mediun shade4'></div>
    <div class='circle small shade5'></div>
  </div>
</div>

<div class="container">
  <h1 id="vinyl-header">Album Vendors</h1>
  <h3 style="text-align: center;">Browse independent stores here, or search for your nearest option</h3>
  <div class="d-flex justify-content-center">
    <form class="form-inline col-12 justify-content-center">
    <%= form_tag sellers_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control mr-3 w-25", id: "seller-search",
        placeholder: "enter your city or postcode"
      %>
      <%= submit_tag "Search", class: "btn btn-basic mt-4 mb-4" %>
    <% end %>
    </form>
  </div>
</div>

<div class="flex-container mb-4">
  <% @sellers.each do |seller| %>

    <div class="flex-item">
      <div class="card-seller">
        <img src= <%= seller.seller_logo %> >
        <div class="seller-infos">
          <ul style="list-style: none; margin: 0; padding: 0;">
            <li><h2><%= link_to seller.seller_name, seller.seller_url, target: :blank %></h2></li>
            <li><p><%= seller.location %></p></li>

            <li><%= link_to seller.seller_url, target: :blank do %>
                <i class="fas fa-store" id="seller"></i>
              <% end %>
            </li>

          </ul>
        </div>

      </div>
    </div>

  <% end %>
</div>


<!--- map --->
<div id="map"
    style="width: 80%; height: 600px; margin: 0 auto;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
<br>
<div class="d-flex justify-content-center"><%= link_to 'back to album search', albums_path, class: "btn btn-basic mb-5" %></div>
