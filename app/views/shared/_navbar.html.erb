<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "vinyl-player2.png", alt: "Vinyl Tracer icon" %>
    <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Browse your collection", favourites_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Find a record store", sellers_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
           <% if current_user.avatar.key.nil? %>
              <%= image_tag "vinyl2.png", alt: "Vinyl Tracer", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= cl_image_tag(current_user.avatar.key, :gravity=>"face", :crop=>"thumb", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false) %>
            <% end %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Account", edit_user_registration_path, class: "dropdown-item" %>
            <!-- <#%= link_to "My dashboard", profile_path, class: "dropdown-item" %> -->
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
